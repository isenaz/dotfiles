    {
      "description": "英数+0を押したときに、テンキーの0を送信する",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "japanese_eisuu",
            "modifiers": {
              "mandatory": [],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "my_modifier_1",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "my_modifier_1",
                "value": 0
